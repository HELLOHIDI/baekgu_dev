<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_logo"
            />


    </androidx.appcompat.widget.Toolbar>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_layout_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/horizontal_margin"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_toolbar">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_img_profile_image"
            android:layout_width="72dp"
            android:layout_height="0dp"
            android:src="@drawable/img_user_none"
            app:layout_constraintRight_toLeftOf="@+id/profile_layout_info_contents"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_layout_info_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/profile_img_profile_image"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textColor="@color/black"
                android:textSize="@dimen/text_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_tv_town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="town"
                android:textColor="@color/subGrey"
                android:textSize="@dimen/text_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_tv_user_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_tv_age_and_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="age|gender"
                android:textColor="@color/subGrey"
                android:textSize="@dimen/text_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_tv_town" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/profile_layout_diet_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/vertical_margin_large"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_layout_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_tv_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목표"
                style="bole"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_tv_target_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:textColor="@color/subGrey"
                android:textSize="@dimen/text_standard"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/profile_layout_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/vertical_margin_small"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_tv_weight_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체중: "
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/profile_tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100cm"
                android:textColor="@color/black"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/profile_layout_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/vertical_margin_small"

            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_tv_height_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신장: "
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/profile_tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100cm"
                android:textColor="@color/black"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/profile_layout_protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/vertical_margin_small"

            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_tv_protein_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="단백질: "
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/profile_tv_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100g"
                android:textColor="@color/black"
                />



        </androidx.appcompat.widget.LinearLayoutCompat>




    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>